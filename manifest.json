{
  "name": "Memrise Export",
  "version": "1.0.0",
  "description": "Export all words from a Memrise course to a CSV file.",
  "manifest_version": 2,
  "permissions": ["downloads", "activeTab", "https://app.memrise.com/*"],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}